generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id          Int     @id @default(autoincrement())
  name        String
  brand       String
  price       Int
  description String
  imageUrl    String
}

model Transaction {
  id           Int     @id @default(autoincrement())
  customerName String
  carName      String
  date         DateTime
  amount       Int
}
